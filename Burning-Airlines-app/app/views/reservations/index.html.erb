<div class="admin_container">
  <p id="notice"><%= notice %></p>

  <h1>Reservations</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th>Flight Number</th>
        <th>Seat row</th>
        <th>Seat column</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.user.email %></td>
          <td><%= link_to reservation.flight.flight_number, flight_path(reservation.flight.id) %></td>
          <td><%= reservation.seat_row %></td>
          <td><%= reservation.seat_column %></td>
          <td><%= link_to 'Show', reservation %></td>
          <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
          <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Reservation', new_reservation_path, class: "btn btn-default" %>
</div>
