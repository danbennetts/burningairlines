
<div class="login-container">
    <div class="login-header-container">
      <h1 class="login-header"><span class="first-letter">B</span>urning Airlines <span class="glyphicon glyphicon-fire"></span></h1>
  </div>
<div class="loginForm">
    <h2>Login</h2>
  <%= form_tag login_path do %>
    <%= label_tag :email %>
    <%= text_field_tag :email  %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag 'Login' %>
  <% end %>
</div>
</div>
