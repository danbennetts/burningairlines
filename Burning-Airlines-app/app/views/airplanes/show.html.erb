<div class="admin_container">
  <p id="notice"><%= notice %></p>

  <h1> Airplane <%= @airplane.id %></h1>

  <p>
    <h2>Name: <%= @airplane.name %></h2>

  </p>

  <p>
    <strong>Rows:</strong>
    <%= @airplane.rows %>
  </p>

  <p>
    <strong>Columns:</strong>
    <%= @airplane.columns %>
  </p>

  <div id="seating-plan">
    <% @airplane.rows.times do %>
      <div class="row">
        <% @airplane.columns.times do %>
          <div class="seat">
          </div>
        <% end %>
      </div>
    <% end %>
  <div>

  <%= link_to 'Edit', edit_airplane_path(@airplane), class: "btn btn-default" %>
  <%= link_to 'Back', airplanes_path, class: "btn btn-default" %>
</div>
